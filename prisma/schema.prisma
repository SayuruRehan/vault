// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum NodeType {
  FOLDER
  DOC
}

model Node {
  id        String   @id @default(cuid())
  type      NodeType
  name      String   // Folder name or Document title
  parentId  String?
  orderKey  String   // Lexicographic key for ordering (fractional indexing)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  parent   Node?  @relation("NodeHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Node[] @relation("NodeHierarchy")
  doc      Document?

  @@index([parentId])
  @@index([orderKey])
}

model Document {
  nodeId      String   @id
  contentJson String   @default("{}")
  plainText   String   @default("")
  lastSavedAt DateTime @default(now())

  // Relationships
  node Node @relation(fields: [nodeId], references: [id], onDelete: Cascade)
}
